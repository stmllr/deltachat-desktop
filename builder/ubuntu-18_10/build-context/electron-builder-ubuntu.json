{
  "appId": "com.deltachat.desktop",
  "linux": {
    "artifactName": "${productName}-ubuntu-18_10-${version}.${ext}",
    "target": [
      "deb"
    ],
    "category": "Utility",
    "depends": [
      "libsasl2-2",
      "libssl1.0.0",
      "libsqlite3-0"
    ]
  },
  "files": [
    "!node_modules/deltachat-node/deltachat-core${/*}",
    "!**/*",
    "node_modules",
    "_locales/*.json",
    "index.js",
    "src",
    "!src/renderer",
    "static",
    "images"
  ],
  "directories": {
    "output": "dist/ubuntu-18_10"
  }
}
